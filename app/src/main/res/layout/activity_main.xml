<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="de.davidgollasch.emiexercise2.MainActivity">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:contentDescription="TU Dresden Logo"
            android:src="@drawable/tu_logo" android:cropToPadding="false" android:scaleType="fitStart"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginBottom="10dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/imageView2"
            android:src="@drawable/dresden_concept_logo"
            android:scaleType="fitEnd" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contact Management App"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerContacts"
            android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="20dp"
    />
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/spinnerContacts"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/tableLayout">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Title"
                    android:id="@+id/textView2" android:layout_column="0" android:layout_marginRight="7dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textViewTitle" android:layout_column="1"
                    android:textColor="@color/tuAkzentfarbe1BlauHell"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Name"
                    android:id="@+id/textView3" android:layout_column="0" android:layout_marginRight="7dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textViewFirstName" android:layout_column="1" android:layout_weight=".30"
                    android:textColor="@color/tuAkzentfarbe1BlauHell"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textViewLastName" android:layout_column="4" android:layout_weight=".3"
                    android:textColor="@color/tuAkzentfarbe1BlauHell"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Address"
                    android:id="@+id/textView8" android:layout_column="0" android:layout_marginRight="7dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textViewAddress" android:layout_column="1" android:layout_span="4"
                    android:textColor="@color/tuAkzentfarbe1BlauHell"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="City"
                    android:id="@+id/textView9" android:layout_column="0" android:layout_marginRight="7dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textViewCity" android:layout_column="1" android:layout_weight=".3"
                    android:textColor="@color/tuAkzentfarbe1BlauHell"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Zip"
                    android:id="@+id/textView10" android:layout_column="3" android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textViewZip" android:layout_column="4" android:layout_weight=".3"
                    android:textColor="@color/tuAkzentfarbe1BlauHell"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Country"
                    android:id="@+id/textView11" android:layout_column="0" android:layout_marginRight="7dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textViewCountry" android:layout_column="1" android:layout_span="4"
                    android:textColor="@color/tuAkzentfarbe1BlauHell"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageView2"
        android:layout_below="@+id/tableLayout"
        android:id="@+id/tableEdit">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="Edit Here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/btnEditHere"
                android:layout_alignRight="@+id/editText3"
                android:layout_alignEnd="@+id/editText3"
                android:layout_weight="1"/>

            <Button
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSave"
                android:layout_alignBaseline="@+id/btnEditHere"
                android:layout_alignBottom="@+id/btnEditHere"
                android:layout_toRightOf="@+id/btnEditHere"
                android:layout_toEndOf="@+id/btnEditHere"
                android:layout_weight="1"
                android:visibility="invisible" />

            <Button
                android:text="Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnEdit"
                android:layout_alignBaseline="@+id/btnSave"
                android:layout_alignBottom="@+id/btnSave"
                android:layout_toRightOf="@+id/btnSave"
                android:layout_toEndOf="@+id/btnSave"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="0dp">

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text="Title"
                android:ems="10"
                android:id="@+id/editTitle"
                android:layout_below="@+id/editSurname"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_column="0" android:layout_marginRight="7dp"
                android:layout_weight="0.5"
                android:visibility="invisible" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text="Title"
                android:ems="10"
                android:id="@+id/editForename"
                android:layout_below="@+id/editText3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_column="1" android:layout_marginRight="7dp"
                android:layout_weight="0.1"
                android:visibility="invisible" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:text="Title"
                android:ems="10"
                android:id="@+id/editSurname"
                android:layout_below="@+id/editForename"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_column="2" android:layout_marginRight="7dp"
                android:layout_weight="0.1"
                android:visibility="invisible" />
 />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="0dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editAdress"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_column="0" android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="0dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editCity"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_column="0" android:layout_marginRight="7dp"
                android:layout_weight=".1"
                android:visibility="invisible" />/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editZip"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_column="1" android:layout_marginRight="7dp"
                android:layout_weight=".1"
                android:visibility="invisible" />/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="5dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editCountry"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_column="0" android:layout_marginRight="7dp"
                android:visibility="invisible" />
        </TableRow>
    </TableLayout>

  </RelativeLayout>